@page
@{
    Layout = "_LayoutDataTables";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Model.HttpContext).RequestToken;
    }
}
@model CicotiWebApp.Pages.Horses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Horse Listing</h2>

<p>
    <a asp-page="Create">Create New Horse</a>
</p>
<div id="divHorseTable" style="width:90%; margin:0 auto;">
    <table id="HorseTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>VehicleID</th>
                <th>Fleet No</th>
                <th>Registration Number</th>
                <th>Vin No</th>
                <th>Phone No</th>
                <th>GPSUnit No</th>
                <th>License Expiry</th>
                <th>Insurance Expiry</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
</div>

@await Html.PartialAsync("_ModalPartial")


@section Scripts {

    <script type="text/javascript">
        $(document).ready(function ()
        {
            $("#HorseTable").on('xhr.dt', function (e, settings, json, xhr) {
            }).DataTable({
                lengthMenu: [25, 100, 150, 200],
                dom: '<lfB<t>ip>',
                buttons: ['excel', 'copy', 'csv', 'pdf', 'print'],
                "fixedHeader": {
                    "header": true,
                    "footer": true
                },
                "responsive": true,
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {

                    "url": "/Horses/Index?handler=Paging",
                     "headers":
                        {
                            "RequestVerificationToken": '@GetAntiXsrfRequestToken()'
                        },
                    "type": "POST",
                    /*"contentType": "application/x-www-form-urlencoded",*/
                    "datatype": "json"
                },
                "columnDefs":
                [{
                    /*Vehicle ID is not visible and is not searchable*/
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                    },
                    {
                        /*FleetNo is visible and is not searchable*/
                        "targets": [1],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*RegistrationNumber is  visible and is  searchable*/
                        "targets": [2],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*VinNo is  visible and is  searchable*/
                        "targets": [3],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*PhoneNo is  visible and is  searchable*/
                        "targets": [4],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*GPSUnitNo  is  visible and is  searchable*/
                        "targets": [5],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*LicenseExpiry is visible and is searchable*/
                        "targets": [6],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*InsuranceExpiry is visible and is searchable*/
                        "targets": [7],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*Edit button  is  visible and is not searchable*/
                        "targets": [8],
                        "visible": true,
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        /*Delete button  is  visible and is not searchable*/
                        "targets": [9],
                        "visible": true,
                        "searchable": false,
                        "orderable": false
                    }
                ],
                "columns": [
                    { "data": "vehicleID", "name": "vehicleID", "autoWidth": true },
                    { "data": "fleetNo", "name": "fleetNo", "autoWidth": true },
                    { "data": "registrationNumber", "name": "registrationNumber", "autoWidth": true },
                    { "data": "vinNo", "name": "vinNo", "autoWidth": true },
                    { "data": "phoneNo", "name": "phoneNo", "autoWidth": true },
                    { "data": "gpsUnitNo", "name": "gpsUnitNo", "autoWidth": true },
                    { "data": "licenseExpiry", "name": "licenseExpiry", "autoWidth": true },
                    { "data": "insuranceExpiry", "name": "insuranceExpiry", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) {
                            return "<p data-placement='top' data-toggle='tooltip' title='Edit'><button class='btn btn-primary btn-xs' data-title='Edit' data-toggle='modal' data-target='#edit' onclick='window.location.href=\"/Horses/Edit/" + full.vehicleID +  "\"\'><span class='glyphicon glyphicon-pencil'></span></button></p>";
                        }
                    },
                    {
                        "data": null, render: function (data, type, row)
                        {
                            return '<p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" onclick=DeleteData("' + row.vehicleID + '")><span class="glyphicon glyphicon-trash"></span></button></p>';
                       }
                    }
                ]

            });//Horses Table
        });//Document Ready end.


    function DeleteData(VehicleID)
     {
            if (confirm("Are you sure you want to delete this Horses ...?"))
            {
                console.log("VehicleID ID to be deleted is: " + VehicleID)
                Delete(VehicleID);
            }
            else
            {
                return false;
            }
     }

        function Delete(VehicleID)
        {
        console.log("Before Ajax Call:" + "Vehicle ID is: " + VehicleID)
            var obj = {};
        obj.VehicleID = VehicleID;


            $.ajax({
                type: "DELETE",
                url: '/Horses/Index?handler=Delete',
                headers:
                    {
                        "RequestVerificationToken": '@GetAntiXsrfRequestToken()'
                    },
                contentType: "application/json",
                dataType: "json",
                data: JSON.stringify(obj),
                success: function (msg) {
                        oTable = $('#HorseTable').DataTable();
                        oTable.draw();
                        $("#msg").html(msg);
                        $("#modalHeader").text("Horse Processing Status");
                        $("#modalMessage").text(msg);
                        $("#myModal").modal("show");
                    },
                    error: function () {
                        $("#msg").html("Error while making Ajax call!");
                        $("#modalHeader").text("Horse Processing Status");
                        $("#modalMessage").text(msg);
                        $("#myModal").modal("show");
                    }
                });//ajax

        }

    </script>
}

