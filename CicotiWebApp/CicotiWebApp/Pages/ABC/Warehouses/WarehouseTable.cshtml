@page
@{
    Layout = "_LayoutDataTables";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Model.HttpContext).RequestToken;
    }
}
@model CicotiWebApp.Pages.ABC.Warehouses.WarehouseTableModel

@{
    ViewData["Title"] = "ABC: Warehouse Listing";
}

<h2>Warehouse Listing</h2>

<p>
    <a asp-page="Warehouse">Create New</a>
</p>
<div id="divWarehouseTable" style="width:90%; margin:0 auto;">
    <table id="WarehouseTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>WarehouseID</th>
                <th>Warehouse Name</th>
                <th>Warehouse Code</th>
                <th>Branch</th>
                <th>Channel</th>
                <th>Warehouse Type</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
</div>

@await Html.PartialAsync("_ModalPartial")


@section Scripts {

    <script type="text/javascript">
        $(document).ready(function ()
        {
            $("#WarehouseTable").on('xhr.dt', function (e, settings, json, xhr) {
            }).DataTable({
                lengthMenu: [25, 100, 150, 200],
                dom: '<lfB<t>ip>',
                buttons: ['excel', 'copy', 'csv', 'pdf', 'print'],
                "fixedHeader": {
                    "header": true,
                    "footer": true
                },
                "responsive": true,
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {

                    "url": "/ABC/Warehouses/WarehouseTable?handler=Paging",
                     "headers":
                        {
                            "RequestVerificationToken": '@GetAntiXsrfRequestToken()'
                        },
                    "type": "POST",
                    /*"contentType": "application/x-www-form-urlencoded",*/
                    "datatype": "json"
                },
                "columnDefs":
                    [
                    {
                        /*Warehouse ID is not visible and is searchable*/
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    },
                    {
                        /*Warehouse Name is  visible and is searchable*/
                        "targets": [1],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*WarehouseCode is visible and is searchable*/
                        "targets": [2],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*branch is visible and is searchable*/
                        "targets": [3],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*Channel is visible and is searchable*/
                        "targets": [4],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*Warehouse Type is visible and is searchable*/
                        "targets": [5],
                        "visible": true,
                        "searchable": true
                    },
                    {
                        /*Edit button  is  visible and is not searchable*/
                        "targets": [6],
                        "visible": true,
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        /*Delete button  is  visible and is not searchable*/
                        "targets": [7],
                        "visible": true,
                        "searchable": false,
                        "orderable": false
                    }
                ],
                "columns": [
                    { "data": "actCostWarehouseID", "name": "actCostWarehouseID", "autoWidth": true },
                    { "data": "warehouseName", "name": "warehouseName", "autoWidth": true },
                    { "data": "warehouseCode", "name": "warehouseCode", "autoWidth": true },
                    { "data": "branch", "name": "branch", "autoWidth": true },
                    { "data": "channel", "name": "channel", "autoWidth": true },
                    { "data": "warehouseType", "name": "warehouseType", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) {
                            return "<p data-placement='top' data-toggle='tooltip' title='Edit'><button class='btn btn-primary btn-xs' data-title='Edit' data-toggle='modal' data-target='#edit' onclick='window.location.href=\"/ABC/Warehouses/Warehouse/" + full.actCostWarehouseID +  "\"\'><span class='glyphicon glyphicon-pencil'></span></button></p>";
                        }
                    },
                    {
                        "data": null, render: function (data, type, row)
                        {
                            return '<p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" onclick=DeleteData("' + row.actCostWarehouseID + '")><span class="glyphicon glyphicon-trash"></span></button></p>';
                       }
                    }
                ]

            });//Warehouses Table
        });//Document Ready end.


    function DeleteData(ID)
     {
            if (confirm("Are you sure you want to delete this Warehouse ...?"))
            {
                console.log(" ID to be deleted is: " + ID)
                Delete(ID);
            }
            else
            {
                return false;
            }
     }

        function Delete(ID)
        {
        console.log("Before Ajax Call:" + "Warehouse ID is: " + ID)
            var obj = {};
            obj.actCostWarehouseID = ID;


            $.ajax({
                type: "DELETE",
                url: '/ABC/Warehouses/WarehouseTable?handler=Delete',
                headers:
                    {
                        "RequestVerificationToken": '@GetAntiXsrfRequestToken()'
                    },
                contentType: "application/json",
                dataType: "json",
                data: JSON.stringify(obj),
                success: function (msg) {
                        oTable = $('#WarehouseTable').DataTable();
                        oTable.draw();
                        $("#msg").html(msg);
                        $("#modalHeader").text("Warehouse Processing Status");
                        $("#modalMessage").text(msg);
                        $("#myModal").modal("show");
                    },
                    error: function () {
                        $("#msg").html("Error while making Ajax call!");
                        $("#modalHeader").text("Warehouse Processing Status");
                        $("#modalMessage").text(msg);
                        $("#myModal").modal("show");
                    }
                });//ajax

        }

    </script>
}