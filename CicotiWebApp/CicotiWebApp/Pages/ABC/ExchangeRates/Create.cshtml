            <div class="form-group">
                <label asp-for="ExchangeRate.SecondCurrency" class="control-label"></label>
                <select asp-for="ExchangeRate.SecondCurrencyID"
                        asp-items="Model.CurrencySL" class="form-control">
                    <option value="">--Select Currency--</option>
                </select>
                <span asp-validation-for="ExchangeRate.SecondCurrencyID" class="text-danger"></span>
            </div>
            <div class="form-group">
