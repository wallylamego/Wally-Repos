@page "{id?}"
@model CicotiWebApp.Pages.Provinces.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Province</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Province.ProvinceID" />
            <div class="form-group">
                <label asp-for="Province.Country" class="control-label"></label>
                <select asp-for="Province.CountryID"
                        asp-items="Model.CountryNameSL" class="form-control">
                    Trailer Type
                    <option value="">--Select Country--</option>
                </select>
                <span asp-validation-for="Province.CountryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Province.ProvinceName" class="control-label"></label>
                <input asp-for="Province.ProvinceName" class="form-control" />
                <span asp-validation-for="Province.ProvinceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
